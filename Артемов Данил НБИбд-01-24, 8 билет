 #include <iostream>
#include <cmath>

using namespace std;

int main() {
  double a, b;

  cout << "Введите длину стороны a: ";
  cin >> a;

  cout << "Введите длину стороны b: ";
  cin >> b;

  double S = a * b;

  cout << "Площадь параллелограмма: " << S << endl;

  return 0;
}

1)

def triangle_area(x1, y1, x2, y2, x3, y3):
    return abs(x1 * (y2 - y3) + x2 * (y3 - y1) + x3 * (y1 - y2)) / 2

x1, y1 = map(float, input("Введите координаты точки A (x1 y1): ").split())
x2, y2 = map(float, input("Введите координаты точки B (x2 y2): ").split())
x3, y3 = map(float, input("Введите координаты точки C (x3 y3): ").split())
area = triangle_area(x1, y1, x2, y2, x3, y3)
print(f"Площадь треугольника с вершинами A({x1}, {y1}), B({x2}, {y2}), C({x3}, {y3}) равна {area}")
